<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <CheckBox
            android:id="@+id/checkbox_task"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:background="@drawable/background_item">

        <ImageView
                android:id="@+id/icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/tv_icon"
                android:background="@drawable/background_icon"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginLeft="10dp"
            app:layout_constraintLeft_toRightOf="@id/icon">

            <TextView
                    android:id="@+id/title_task"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Wake up Buddy"
                    android:textSize="18dp"
                    android:textColor="@color/white"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"/>

            <TextView
                    android:id="@+id/hour_task"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7:00 AM"
                    android:textColor="@color/white"
                    app:layout_constraintTop_toTopOf="@id/title_task"
                    app:layout_constraintBottom_toBottomOf="@id/title_task"
                    app:layout_constraintRight_toRightOf="parent"/>

            <TextView
                    android:id="@+id/description_task"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lunch with Julia, fight this quarantine with humor dsdsqdqs"
                    android:textColor="@color/white"
                    app:layout_constraintLeft_toLeftOf="@id/title_task"
                    app:layout_constraintTop_toBottomOf="@id/title_task"
                    app:layout_constraintLeft_toRightOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>