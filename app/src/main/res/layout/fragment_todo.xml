<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#07060F"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".Screens.ToDoFragment">

    <TextView
            android:id="@+id/schedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Today's Schedule"
            android:textSize="30dp"
            android:textColor="@color/white"
            android:fontFamily="@font/sf_pro_medium"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
            android:id="@+id/day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Monday 19"
            android:textSize="25dp"
            android:fontFamily="@font/sf_pro_medium"
            android:textColor="#9B33F2"
            app:layout_constraintTop_toBottomOf="@id/schedule"
            app:layout_constraintLeft_toLeftOf="@id/schedule"/>

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="2dp"
            app:layout_constraintBottom_toTopOf="@id/create_todo"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/day"
            app:layout_constraintLeft_toLeftOf="@id/day" />

    <ImageButton
            android:id="@+id/create_todo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_add_white"
            android:padding="5dp"
            android:background="@drawable/circle_adder"
            android:layout_marginBottom="45dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/recycler_view"
            app:layout_constraintLeft_toLeftOf="parent"
            />

</androidx.constraintlayout.widget.ConstraintLayout>